{
  "name": "ampd",
  "private": true,
  "scripts": {
    "format": "ng lint --fix && prettier --write \"src/**/*.scss\"",
    "warnings": "ng lint --silent --format=checkstyle > checkstyle-ts-result.xml",
    "lint": "ng lint",
    "ng": "ng",
    "start": "ng serve",
    "e2e": "ng e2e",
    "cypress:open": "ng run ampd:cypress-open",
    "cypress:run": "cypress run",
    "delete:reports": "rm cypress/results/* || true",
    "generate:reports": "npx mochawesome-merge \"cypress/results/*.json\" > mochawesome.json && marge -o reports/html mochawesome.json && rm mochawesome.json"
  },
  "dependencies": {
    "@angular/cdk": "21.0.0",
    "@angular/common": "21.0.0",
    "@angular/compiler": "21.0.0",
    "@angular/core": "21.0.0",
    "@angular/forms": "21.0.0",
    "@angular/material": "21.0.0",
    "@angular/platform-browser": "21.0.0",
    "@angular/router": "21.0.0",
    "@stomp/rx-stomp": "2.2.0",
    "@stomp/stompjs": "7.2.1",
    "material-icons": "1.13.14",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "21.0.0",
    "@angular/compiler-cli": "21.0.0",
    "@cypress/schematic": "3.0.0",
    "@types/node": "24.10.1",
    "angular-eslint": "21.0.1",
    "autoprefixer": "10.4.21",
    "cypress": "latest",
    "cypress-multi-reporters": "2.0.5",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "mochawesome": "7.1.4",
    "mochawesome-merge": "5.0.0",
    "mochawesome-report-generator": "6.3.2",
    "npm-check-updates": "19.1.2",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "3.4.17",
    "typescript-eslint": "8.46.2"
  }
}
